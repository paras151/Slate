  <center>
      <h1>SLATE</h1>
    <div class="login_div">
      <hr id="hr1" />&nbsp
      <hr id="hr2" /><br /><br /><br />
      <form class="login-Page" action="">
        <input id="email" type="email" name="email" placeholder="username" required class="input_style w3-animate-right"><br /><br />
        <input id="pw" type="password" name="password" placeholder="password" required class="input_style w3-animate-left"><br /><br />
        <input type="submit" name="submit_button" value="LOGIN" id="login_button" class="w3-animate-bottom"><br />
      </form>
    </div>
  </center>
  <script src="login.js"></script>
